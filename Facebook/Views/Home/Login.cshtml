
@using Facebook.Models;
@{
    ViewBag.Title = "Login";
}

<h2<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Facebook Login</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            display: flex;
            align-items: center;
            justify-content: center;
            height: 100vh;
            margin: 0;
        }

        .login-container {
            background-color: #fff;
            padding: 20px;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            max-width: 400px;
            width: 100%;
        }

        .login-container h2 {
            text-align: center;
            color: #1877f2;
        }

        .form-group {
            margin-bottom: 20px;
        }

        .form-group label {
            display: block;
            margin-bottom: 8px;
            color: #65676b;
        }

        .form-group input {
            width: 100%;
            padding: 10px;
            border: 1px solid #dddfe2;
            border-radius: 4px;
            box-sizing: border-box;
        }

        .form-group button {
            width: 100%;
            padding: 10px;
            background-color: #1877f2;
            color: #fff;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        .form-group button:hover {
            background-color: #0e5a8a;
        }
    </style>
</head>
<body>

<div class="login-container">
    <h2>Đăng nhập vào Facebook</h2>
    <form role="form" method="post" action="/Home/Login">
        <div class="form-group">
            <label for="email">Email hoặc số điện thoại:</label>
            <input type="text" id="email" name="username" placeholder="Email or phone">
        </div>

        <div class="form-group">
            <label for="password">Mật khẩu:</label>
            <input type="password" id="password" name="password" placeholder="Password">
            <p style="color:red;">@TempData["error"]</p>
        </div>

        <div class="form-group">
            <button type="submit">Đăng nhập</button>
        </div>
    </form>
</div>

</body>
</html>


