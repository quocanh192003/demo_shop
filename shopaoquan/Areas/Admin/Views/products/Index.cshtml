@model PagedList.IPagedList<shopaoquan.Models.product>
@using PagedList.Mvc;
@using PagedList;
@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_layout_admin.cshtml";
}
    <div class="search">
        @using (Html.BeginForm("Index", "products", FormMethod.Get))
        {
            <p class="item_search">
                Tìm tên sản phẩm: @Html.TextBox("searchString", ViewBag.CurrentFilter as String)
                <input type="submit" value="Tìm kiếm" />
            </p>

        }
        <p class="Create">
            @Html.ActionLink("Thêm sản phẩm", "Create")
        </p>

    </div>
<style>
.search{
    width: 100%;
    
    float:left;
    display:block;
    clear:none;
}
.item_search{
    font-size:15px;
    width:50%;
}
.Create{
    float:right;
    font-size:15px;
}

</style>
<div class="table-container">
    <table class="table">
        <tr class="center">
            <th>
                ID SẢN PHẨM
            </th>
            <th>
                TÊN SẢN PHẨM
            </th>
            <th>
                HÌNH ẢNH
            </th>
            <th>
                GIÁ
            </th>
           
            <th>
                MÔ TẢ
            </th>
            <th>
                SỐ LƯỢNG
            </th>
            <th>
                DANH MỤC
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.stt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name_product)
                </td>
                <td>
                    <img style="width:100px;" alt="ảnh" src="~/assets/images/products/@item.images" />
                </td>
                <td>
                    @Html.Raw(item.price_new)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.describe)
                </td>
                <td>
                    @Html.Raw(item.quantity)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.subCategory.name_subcate)
                </td>
                <td class="icon-td" style="padding:0px; float:none;clear:right;">
                    @Html.ActionLink("Sửa", "Edit", new { id = item.id_product })
                    @Html.ActionLink("Chi tiết", "Details", new { id = item.id_product })
                    @Html.ActionLink("Xóa", "Delete", new { id = item.id_product })
                </td>
            </tr>
        }

    </table>
Trang @(Model.PageCount < Model.PageNumber ? 0 : Model.PageNumber) of @Model.PageCount
@Html.PagedListPager(Model, Page=>Url.Action("Index", new { Page, currentFilter = ViewBag.currentFilter}))
</div>
<style>
    .create-button-container {
        text-align: right;
        margin-bottom: 20px;
    }

    .create-button {
        display: inline-block;
        padding: 10px 20px;
        background-color: #4CAF50;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

        .create-button:hover {
            background-color: #45a049;
        }

    .table-container {
        border: 1px solid #ddd;
        border-radius: 4px;
        overflow: hidden;
        margin-top: 20px;
    }

    .table {
        width: 100%;
        border-collapse: collapse;
    }

        .table th,
        .table td {
            padding: 0px;
            text-align: left;
            border-bottom: 1px solid #ddd;
            vertical-align: middle;
        }
        .table tr{
            font-size:15px;
        }
        .table th {
            background-color: #f2f2f2;
            font-weight: bold;
        }

        .table tbody tr:nth-child(even) {
            background-color: #F0FFF0; /* Màu xanh nhạt */
        }

        .table tbody tr:nth-child(odd) {
            background-color: #ffffff; /* Màu trắng */
        }

    .product-image {
        width: 100%;
        height: 50px;
        object-fit: cover;
        border-radius: 4px;
    }

    .action-link {
        margin-right: 5px;
        color: #555;
        text-decoration: none;
        font-size: 18px;
    }

        .action-link:hover {
            color: #000;
        }

    .table td.category-column {
        width: 150px; /* Đặt chiều rộng cố định cho cột danh mục */
    }

    .table td.category-column {
        width: 150px;
    }

    .icon-td {
        padding: 0px;
        width: 108px;
        padding: 15px;
    }
</style>
