</div><!-- /.body-content -->
<script>
    let giaTri = parseInt(document.getElementById("value").value); // Lấy giá trị ban đầu từ input

    function hienThiGiaTri() {
        document.getElementById("value").value = giaTri;
    }

    function tangGiaTri() {
        giaTri++;
        hienThiGiaTri();
    }

    function giamGiaTri() {
        giaTri--;
        hienThiGiaTri();
    }
</script>
